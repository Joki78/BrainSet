<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F1F3"
    tools:context=".Scanner">

    <ImageView
        android:id="@+id/idIVCaptureImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:clickable="true"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/idTVDetectedText"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_below="@id/idIVCaptureImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text="Your result appear here"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/idButtonSnap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_below="@id/idTVDetectedText"
        android:layout_marginTop="20dp"
        android:text="Camera"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:backgroundTint="#FF9E00"
        />

    <Button
        android:id="@+id/idButtonDetect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_below="@id/idTVDetectedText"
        android:layout_toEndOf="@id/idButtonSnap"
        android:layout_marginTop="20dp"
        android:text="Detect"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:backgroundTint="#FF9E00"
        />

    <Button
        android:id="@+id/speech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_below="@id/idTVDetectedText"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/idButtonDetect"
        android:text="Speak"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:backgroundTint="#FF9E00"
        />
    <Button
        android:id="@+id/clear"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/idTVDetectedText"
        android:layout_toEndOf="@id/speech"
        android:layout_marginTop="20dp"
        android:drawableEnd="@drawable/baseline_delete_forever_24"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:backgroundTint="#FF9E00"
        />

</RelativeLayout>